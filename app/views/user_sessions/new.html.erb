<style>
  body {
    background: url("/slide.jpg") no-repeat center center fixed; 
    -webkit-background-size: cover;
    -moz-background-size: cover;
    -o-background-size: cover;
    background-size: cover;
    }
  input.transparent-input {
    background-color:rgba(255,255,255, 0.2);
    border:none ;
    color: #FFF;
    }
  .post textarea {
    background-color:rgba(255,255,255, 0.2);
    border:none ;
    color: #FFF;
    }
  .select {
    border:none ;
    background-color: rgba(255,255,255,0.2);
    color: #FFF;
    }
  form label{
    color: #fff;
    }
  .panel-transparent {
    background: none;
    border-color: #ddd;
    }
  .panel-transparent .panel-heading{
    background: rgba(122, 130, 136, 0.2)!important;
    }
  .panel-transparent .panel-body{
    background: rgba(46, 51, 56, 0.2)!important;
    }
  .email{
      border:none ;
    background-color: rgba(255,255,255,0.2);
    color: #FFF;
  }  

</style>


<div class="text-center">
  <%= image_tag "chlodna-15-logo.png" %>
</div>

<div class="row">
  <div class="col-md-3"></div>
    <div class="col-md-6">
      
      <div class="panel panel-primary panel-transparent">
        <div class="panel-heading"><h6 class="text-center"><b>Zaloguj sie aby zarezerwowac stolik</b></h6></div>
          <div class="panel-body">

          

<%= form_for @user_session  do |f| %>
  <%= render 'shared/errors', object: @user_session %>

  <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email, class: "form-control email", autocomplete: 'off' %>
  </div>

  <div class="form-group">
    <%= f.label :password %>
    <%= f.password_field :password, class: 'form-control transparent-input', autocomplete: 'off' %>
  </div>

  <div class="form-group">
    <%= f.label :remember_me %>
    <%= f.check_box :remember_me %>
  </div>

  <%= f.submit "Log in!", class: 'btn btn-secondary btn-lg' %>
<% end %>




            
          </div>
        </div>    
      </div>


    
    
    </div>
  </div> 
</div>   







