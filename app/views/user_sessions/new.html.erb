<div class="text-center">
  <%= image_tag "chlodna-15-logo.png" %>
</div>

<div class="row">
  <div class="col-md-3"></div>
    <div class="col-md-6">
      
      <div class="panel panel-primary panel-transparent">
        <div class="panel-heading"><h6 class="text-center"><b>Zaloguj sie aby zarezerwowac stolik</b></h6></div>
          <div class="panel-body">

          

<%= form_for @user_session  do |f| %>
  <%= render 'shared/errors', object: @user_session %>

  <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email, class: "form-control transparent-input" %>
  </div>

  <div class="form-group">
    <%= f.label :password %>
    <%= f.password_field :password, class: 'form-control transparent-input' %>
  </div>

  <div class="form-group">
    <%= f.label :remember_me %>
    <%= f.check_box :remember_me %>
  </div>

  <%= f.submit "Log in!", class: 'btn btn-secondary btn-lg' %>
<% end %>




            
          </div>
        </div>    
      </div>


    
    
    </div>
  </div> 
</div>   







